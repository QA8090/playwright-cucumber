{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true  // Add this line
  },
  "include": ["./features/**/*.ts", "./support/**/*.ts", "./pages/**/*.ts", "./steps/**/*.ts"],
  "exclude": ["node_modules"]
}
